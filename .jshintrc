{
    "maxerr"        : 50,

    "bitwise"       : true,
    "camelcase"     : false,
    "curly"         : true,
    "eqeqeq"        : true,
    "forin"         : true,
    "immed"         : false,
    "indent"        : 2,
    "latedef"       : true,
    "newcap"        : false,
    "noarg"         : true,
    "noempty"       : true,
    "nonew"         : true,
    "plusplus"      : true,
    "quotmark"      : true,
    "undef"         : true,
    "unused"        : false,
    "strict"        : true,

    /* should decide as a team about these */
    "maxparams"     : 3,         // {int} Max number of formal params allowed per function
    "maxdepth"      : 2,         // {int} Max depth of nested blocks (within functions)
    "maxstatements" : 12,        // {int} Max number statements per function
    "maxcomplexity" : 6,         // {int} Max cyclomatic complexity per function
    "maxlen"        : 80,        // {int} Max number of characters per line

    "expr"          : true,      // Specifically for mocha tests that don't end with a function call (i.e. '.to.exist;')
    "asi"           : false,
    "boss"          : false,     // Too-clever-by-half things like "while ( x = arr[i] )"
    "debug"         : false,
    "eqnull"        : true,
    "validthis"     : false,

    "browser"       : false,
    "node"          : true,
    "globals"       :  {
      // Mocha globals
      "describe"   : false,
      "it"         : false,
      "before"     : false,
      "beforeEach" : false,
      "after"      : false,
      "afterEach"  : false
    }
}
